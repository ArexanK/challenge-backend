<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CRUD </title>
  </head>
  <body>
    <h1>Welcome to Facebook</h1>
    <form action="/save-post" method="post">
      <input type="text" name="userName" placeholder="username" required />
      <input type="text" name="title" placeholder="Title" required />
      <textarea
        name="message"
        placeholder="message (at least 40 characters)"
      ></textarea>
      <button type="submit">Add New Post</button>
    </form>
    <% if (feed.length > 0) { %>
      <% for(let i = 0; i < feed.length; i++) { %>
        <div>
          <h3><%= feed[i].userName %></h3>
          <p><small><%= feed[i].created_at %></small></p>
          <h3><%= feed[i].title %></h3>
          <p><%= feed[i].message %></p>
          <a href="/edit-post/<%= feed[i]._id %>">Edit</a>
          <a href="/delete-post/<%= feed[i]._id %>">Delete</a>
        </div>
      <% } %>
    <% } else { %>
      <p>No posts available</p>
    <% } %>
  </body>
</html>